#include <stdio.h>

int main() {
    int i;
    float temp[7], high, low;

    for (i = 0; i < 7; i++) {
        printf("Enter temperature for day %d: ", i + 1);
        scanf("%f", &temp[i]);
    }

    high = low = temp[0];

    for (i = 1; i < 7; i++) {
        if (temp[i] > high)
            high = temp[i];
        if (temp[i] < low)
            low = temp[i];
    }

    printf("Highest Temperature = %.2f\n", high);
    printf("Lowest Temperature = %.2f\n", low);

    return 0;
}