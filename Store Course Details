#include <stdio.h>

struct Course {
    int cid;
    char cname[50];
    int duration;
};

int main() {
    struct Course c;

    printf("Enter course id: ");
    scanf("%d", &c.cid);

    printf("Enter course name: ");
    scanf("%s", c.cname);

    printf("Enter duration (months): ");
    scanf("%d", &c.duration);

    printf("\nCourse Details:\n");
    printf("ID: %d\nName: %s\nDuration: %d months\n", c.cid, c.cname, c.duration);

    return 0;
}