#include <stdio.h>

struct Book {
    int bookId;
    char title[50];
    float price;
};

int main() {
    struct Book b;

    printf("Enter book id: ");
    scanf("%d", &b.bookId);

    printf("Enter book title: ");
    scanf("%s", b.title);

    printf("Enter price: ");
    scanf("%f", &b.price);

    printf("\nBook Details:\n");
    printf("ID: %d\nTitle: %s\nPrice: %.2f\n", b.bookId, b.title, b.price);

    return 0;
}