#include <stdio.h>

struct Product {
    int pid;
    char name[50];
    float price;
};

int main() {
    struct Product p;

    printf("Enter product id: ");
    scanf("%d", &p.pid);

    printf("Enter product name: ");
    scanf("%s", p.name);

    printf("Enter price: ");
    scanf("%f", &p.price);

    printf("\nProduct Details:\n");
    printf("ID: %d\nName: %s\nPrice: %.2f\n", p.pid, p.name, p.price);

    return 0;
}