#include <stdio.h>

int main() {
    int n, i;
    float basic, allowance, total;

    printf("Enter number of employees: ");
    scanf("%d", &n);

    for (i = 1; i <= n; i++) {
        printf("\nEmployee %d\n", i);

        printf("Enter basic salary: ");
        scanf("%f", &basic);

        printf("Enter allowance: ");
        scanf("%f", &allowance);

        total = basic + allowance;

        printf("Total Salary = %.2f\n", total);
    }

    return 0;
}