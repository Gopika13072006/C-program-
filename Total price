#include <stdio.h>

int main() {
    float price, discount_percent, discount, final_price;

    printf("Enter original price: ");
    scanf("%f", &price);

    printf("Enter discount percentage: ");
    scanf("%f", &discount_percent);

    discount = (price * discount_percent) / 100;
    final_price = price - discount;

    printf("Discount Amount = %.2f\n", discount);
    printf("Final Price = %.2f\n", final_price);

    return 0;
}
